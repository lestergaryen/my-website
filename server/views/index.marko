</head>
<body>
  <main class="container my-4">
  <div class="d-flex justify-content-between">
    <span>${input.title}</span>
    <a href="/place" title="Add Item" class="btn btn-primary">Add Item</a>
  </div>
  <article class="my-2">
    <div class="row">
      <for(item in input.wishList)>
          <div class="col-md-3">
            <div class="card">
              <img src="${item.image}" class="card-img-top">
              <div class="card-body">
                <h4>${item.name}</h4>
                <p>${item.description}</p>
              </div>
            </div>
          </div>
      </for>
    </div>
    </article>
  </main>
  
